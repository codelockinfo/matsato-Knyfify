{% comment %}
  Matsato Product Features Section
  Matching the reference design with precise hotspot positioning.
{% endcomment %}

<section id="MatsatoFeatures-{{ section.id }}" class="matsato-feature-section color-{{ section.settings.color_scheme }} gradient">
  <div class="matsato-container">
    <div class="ms-feature-grid">
      
      {% comment %} Left Side: Image with Hotspots {% endcomment %}
      <div class="ms-feature-image-column">
        <div class="ms-feature-image-wrapper">
          {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="{{ section.settings.image.alt | default: 'Matsato Knife Features' }}" class="ms-feature-main-img">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg ms-feature-main-img' }}
          {% endif %}

          {% for block in section.blocks %}
            <div class="ms-hotspot" style="top: {{ block.settings.pos_top }}%; left: {{ block.settings.pos_left }}%;" {{ block.shopify_attributes }}>
              <div class="ms-hotspot__dot"></div>
              <div class="ms-hotspot__pulse"></div>
              <div class="ms-hotspot__line" style="width: {{ block.settings.line_width }}px; transform: rotate({{ block.settings.line_angle }}deg);"></div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% comment %} Right Side: Feature Content {% endcomment %}
      <div class="ms-feature-content-column">
        {% for block in section.blocks %}
          <div class="ms-feature-item" {{ block.shopify_attributes }}>
            <div class="ms-feature-item__icon-row">
              {% if block.settings.icon_type == 'image' and block.settings.icon_image != blank %}
                <img src="{{ block.settings.icon_image | image_url: width: 50 }}" class="ms-feature-item__icon-img" alt="">
              {% elsif block.settings.icon_type == 'svg' and block.settings.icon_svg != blank %}
                <div class="ms-feature-item__icon-svg">{{ block.settings.icon_svg }}</div>
              {% endif %}
              <h3 class="ms-feature-item__title">{{ block.settings.heading }}</h3>
            </div>
            <div class="ms-feature-item__desc">
              {{ block.settings.text }}
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<style>
  .matsato-feature-section {
    padding: 100px 0;
    overflow: hidden;
  }

  .ms-feature-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }


  .ms-feature-image-column {
    display: flex;
    justify-content: flex-end;
  }

  .ms-feature-image-wrapper {
    position: relative;
    width: 100%;
    max-width: 550px;
    line-height: 0;
  }

  .ms-feature-main-img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.6);
  }

  /* Hotspot Elements */
  .ms-hotspot {
    position: absolute;
    width: 1px;
    height: 1px;
    z-index: 10;
  }

  .ms-hotspot__dot {
    position: absolute;
    width: 6px;
    height: 6px;
    background: #fff;
    border-radius: 50%;
    top: -3px;
    left: -3px;
    box-shadow: 0 0 10px #fff;
    z-index: 5;
  }

  .ms-hotspot__pulse {
    position: absolute;
    width: 30px;
    height: 30px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    top: -15px;
    left: -15px;
    animation: ms-pulse-anim 2s infinite ease-out;
    z-index: 4;
  }

  @keyframes ms-pulse-anim {
    0% { transform: scale(0.5); opacity: 1; }
    100% { transform: scale(2.5); opacity: 0; }
  }

  .ms-hotspot__line {
    position: absolute;
    top: 50%;
    left: 0;
    height: 1px;
    background: #ff9900;
    transform-origin: left center;
    pointer-events: none;
    opacity: 0.8;
  }

  /* Content Column */
  .ms-feature-content-column {
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .ms-feature-item__icon-row {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
  }

  .ms-feature-item__icon-img {
    width: 25px;
    height: 25px;
    object-fit: contain;
  }

  .ms-feature-item__icon-svg {
    width: 25px;
    height: 25px;
    color: #ff9900;
  }
  
  .ms-feature-item__icon-svg svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .ms-feature-item__title {
    font-size: 1.25rem;
    font-weight: 800;
    text-transform: uppercase;
    margin: 0;
    color: #fff;
    letter-spacing: 0.5px;
  }

  .ms-feature-item__desc {
    font-size: 16px;
    line-height: 1.6;
    color: rgba(255,255,255,0.7);
    max-width: 460px;
  }

  @media (max-width: 990px) {
    .ms-feature-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 50px;
    }
    .ms-feature-image-column {
      justify-content: center;
    }
    .ms-hotspot__line {
      display: none;
    }
    .ms-feature-item__icon-row {
      justify-content: center;
    }
    .ms-feature-item__desc {
      margin: 0 auto;
    }
  }
</style>

{% schema %}
{
  "name": "Matsato Product Features",
  "max_blocks": 3,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-4"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Point",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "FEATURE TITLE"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Content",
          "default": "Feature description goes here."
        },
        {
          "type": "header",
          "content": "Icon/SVG Option"
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "image", "label": "Upload Image" },
            { "value": "svg", "label": "SVG Code" }
          ],
          "default": "none"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Custom Icon Image"
        },
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Custom SVG Code"
        },
        {
          "type": "header",
          "content": "Hotspot Position"
        },
        {
          "type": "range",
          "id": "pos_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Vertical Position",
          "default": 30
        },
        {
          "type": "range",
          "id": "pos_left",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Horizontal Position",
          "default": 30
        },
        {
          "type": "header",
          "content": "Line Adjustment"
        },
        {
          "type": "range",
          "id": "line_width",
          "min": 0,
          "max": 400,
          "step": 5,
          "unit": "px",
          "label": "Line Length",
          "default": 200
        },
{
  "type": "range",
  "id": "line_angle",
  "min": 0,
  "max": 360,
  "step": 5,
  "unit": "deg",
  "label": "Line Angle",
  "default": 0
}

      ]
    }
  ],
  "presets": [
    {
      "name": "Matsato Product Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "PERFECT GRIP",
            "pos_top": 28,
            "pos_left": 36,
            "line_width": 250
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "PRECISELY CRAFTED",
            "pos_top": 52,
            "pos_left": 36,
            "line_width": 250
          }
        }
      ]
    }
  ]
}
{% endschema %}
