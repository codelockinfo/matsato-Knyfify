<section id="MatsatoBanner-{{ section.id }}" class="matsato-banner-section color-{{ section.settings.color_scheme }} gradient">
  <div class="matsato-banner__media-container">
    {%- if section.settings.image_desktop != blank -%}
      <div class="matsato-banner__media desktop-only">
        {{ section.settings.image_desktop | image_url: width: 3840 | image_tag: 
          loading: 'lazy',
          widths: '750, 1100, 1500, 1780, 2000, 3000, 3840',
          class: 'matsato-banner__img'
        }}
      </div>
    {%- endif -%}
    
    {%- if section.settings.image_mobile != blank -%}
      <div class="matsato-banner__media mobile-only">
        {{ section.settings.image_mobile | image_url: width: 1500 | image_tag: 
          loading: 'lazy',
          widths: '375, 550, 750, 1100, 1500',
          class: 'matsato-banner__img'
        }}
      {%- elsif section.settings.image_desktop != blank -%}
        <div class="matsato-banner__media mobile-only">
          {{ section.settings.image_desktop | image_url: width: 1500 | image_tag: 
            loading: 'lazy',
            class: 'matsato-banner__img'
          }}
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.image_desktop == blank and section.settings.image_mobile == blank -%}
      <div class="matsato-banner__media placeholder">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="matsato-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  </div>

  <div class="matsato-container matsato-banner__container">
    <div class="matsato-banner__content matsato-banner__content--{{ section.settings.content_alignment }}">
      <div class="matsato-banner__box">
        {%- if section.settings.heading != blank -%}
          <h2 class="matsato-banner__heading matsato-title">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.subheading != blank -%}
          <div class="matsato-banner__subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <div class="matsato-banner__cta">
            <a href="{{ section.settings.button_link | default: '#' }}" class="matsato-button">
              {{ section.settings.button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .matsato-banner-section {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.banner_height_desktop }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .matsato-banner__media-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .matsato-banner__media {
    width: 100%;
    height: 100%;
  }

  .matsato-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .matsato-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 2;
    pointer-events: none;
  }

  .matsato-banner__container {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .matsato-banner__content {
    display: flex;
    width: 100%;
  }

  .matsato-banner__content--left { justify-content: flex-start; text-align: left; }
  .matsato-banner__content--center { justify-content: center; text-align: center; }
  .matsato-banner__content--right { justify-content: flex-end; text-align: right; }

  .matsato-banner__box {
    max-width: 600px;
    padding: 20px;
  }

  .matsato-banner__heading {
    font-size:32px;
    color: #fff;
    margin-bottom: 20px;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }

  .matsato-banner__subheading {
    font-size: 1.25rem;
    color: #fff;
    margin-bottom: 30px;
    line-height: 1.5;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }

  .matsato-banner__cta .matsato-button {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: none;
  }

  .matsato-banner__cta .matsato-button:hover {
    opacity: 0.9;
    transform: scale(1.02);
    background-color: rgb(var(--color-button));
  }

  .desktop-only { display: block; }
  .mobile-only { display: none; }

  @media (max-width: 768px) {
    .matsato-banner-section {
      min-height: {{ section.settings.banner_height_mobile }}px;
    }
    .desktop-only { display: none; }
    .mobile-only { display: block; }
    
    .matsato-banner__content {
      justify-content: center !important;
      text-align: center !important;
    }
    
    .matsato-banner__heading {
      font-size: 2rem;
    }
    
    .matsato-banner__subheading {
      font-size: 1.1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Matsato Custom Banner",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-4"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "range",
      "id": "banner_height_desktop",
      "min": 300,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop Banner Height",
      "default": 600
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile Banner Height",
      "default": 450
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Your Premium Banner Title"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Add a compelling description for your brand story or promotion.</p>"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Position (Desktop)",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Matsato Custom Banner"
    }
  ]
}
{% endschema %}
