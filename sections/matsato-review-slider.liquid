{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .matsato-review-slider {
    position: relative;
    overflow: hidden;
  }

  /* Swiper general */
  .matsato-review-slider .swiper {
    width: 100%;
  }

  .matsato-review-slider .swiper-slide {
    height: auto;
    opacity: 0.4;
    transition: opacity 0.5s ease;
  }

  .matsato-review-slider .swiper-slide-active {
    opacity: 1;
  }

  .review-slide-inner {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 20px;
  }

  .review-grid {
    display: flex;
    gap: 30px;
    align-items: flex-start;
  }

  /* Images Layout */
  .review-images {
    display: flex;
    gap: 15px;
    flex: 0 0 55%;
  }

  .person-img-col {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .person-img-col img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 2/3;
  }

  .extra-images-col {
    flex: 0 0 42%;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .extra-img-item {
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .extra-img-item img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1/1;
  }

  /* Content Layout */
  .review-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 20px;
    position: relative;
  }

  .review-logo-wrap {
    margin-bottom: 20px;
    max-width: 180px;
  }

  .review-logo-wrap img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .stars-row {
    display: flex;
    gap: 4px;
    margin-bottom: 25px;
    color: #ffb800;
  }

  .stars-row svg {
    width: 22px;
    height: 22px;
  }

  .desc-text {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 25px;
    color: rgba(var(--color-foreground), 0.9);
    letter-spacing: 0.01em;
  }

  .author-info {
    font-style: italic;
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .sponsored-partnership {
    align-self: flex-end;
    position: relative;
    margin-top: auto;
  }

  .sponsored-link {
    font-style: italic;
    font-size: 16px;
    text-decoration: underline;
    cursor: pointer;
    color: rgba(var(--color-foreground), 0.7);
    transition: color 0.3s;
    white-space: nowrap;
  }

  .sponsored-link:hover {
    color: rgba(var(--color-foreground), 1);
  }

  .sponsored-popover {
    position: absolute;
    bottom: calc(100% + 15px);
    right: 0;
    width: 300px;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.1);
    box-shadow: 0 15px 45px rgba(0,0,0,0.15);
    padding: 20px;
    border-radius: 12px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 100;
    font-style: normal;
  }

  .sponsored-popover::after {
    content: '';
    position: absolute;
    top: 100%;
    right: 30px;
    border-width: 8px;
    border-style: solid;
    border-color: rgb(var(--color-background)) transparent transparent transparent;
  }

  .sponsored-partnership:hover .sponsored-popover {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* Navigation */
  .matsato-review-slider .swiper-button-next,
  .matsato-review-slider .swiper-button-prev {
    display: flex !important;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    background: rgba(var(--color-foreground), 0.2);
    border: none;
    border-radius: 50%;
    color: #fff;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .matsato-review-slider .swiper-button-next:hover,
  .matsato-review-slider .swiper-button-prev:hover {
    background: rgba(var(--color-foreground), 0.4);
    transform: scale(1.1);
  }

  .matsato-review-slider .swiper-button-next:after,
  .matsato-review-slider .swiper-button-prev:after {
    font-size: 14px;
    font-weight: bold;
    display: block;
    position: static;
  }

  .matsato-review-slider .swiper-button-prev {
    left: 10px;
  }

  .matsato-review-slider .swiper-button-next {
    right: 10px;
  }


  /* Mobile Styles - Matching image 1 */
  @media screen and (max-width: 989px) {
    .review-grid {
      flex-direction: column;
      gap: 30px;
    }

    .review-images {
      flex: 1;
      width: 100%;
    }

    .extra-images-col {
      display: none; /* Reference image 1 shows just the main person image */
    }

    .person-img-col img {
      aspect-ratio: 4/5;
    }

    .review-content {
      padding-left: 0;
      width: 100%;
    }

    .desc-text {
      font-size: 1.6rem;
    }

    .author-info {
      margin-bottom: 20px;
    }
  }

  @media screen and (max-width: 749px) {
     .review-logo-wrap {
       max-width: 140px;
     }

     .desc-text {
       font-size: 16px;
     }

     .sponsored-partnership {
        align-self: flex-start;
        width: 100%;
        text-align: right;
     }
     
     .sponsored-popover {
        width: calc(100vw - 40px);
        right: 0;
     }
  }
{%- endstyle -%}

