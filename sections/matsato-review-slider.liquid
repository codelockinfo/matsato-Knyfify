  Only load Swiper once globally if possible, but for this standalone section:
{%- endcomment -%}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<div class="matsato-review-slider color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="review-slide-inner">
    {%- if section.settings.heading != blank -%}
      <h2 class="title inline-richtext h1" style="text-align: {{ section.settings.heading_alignment }}; margin-bottom: 40px;">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="swiper swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="review-grid">
              
              <div class="review-images">
                <div class="person-img-col">
                  {%- if block.settings.person_image != blank -%}
                    <picture>
                      {%- if block.settings.person_image_mobile != blank -%}
                        <source media="(max-width: 989px)" srcset="{{ block.settings.person_image_mobile | image_url: width: 1000 }}">
                      {%- endif -%}
                      <img src="{{ block.settings.person_image | image_url: width: 1200 }}" 
                           alt="{{ block.settings.person_image.alt | default: block.settings.author_name }}" 
                           loading="lazy">
                    </picture>
                  {%- else -%}
                    <div class="placeholder-svg-wrap">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>

                <div class="extra-images-col">
                  {%- if block.settings.knife_image_1 != blank -%}
                    <div class="extra-img-item">
                      <img src="{{ block.settings.knife_image_1 | image_url: width: 600 }}" loading="lazy">
                    </div>
                  {%- endif -%}
                  {%- if block.settings.knife_image_2 != blank -%}
                    <div class="extra-img-item">
                      <img src="{{ block.settings.knife_image_2 | image_url: width: 600 }}" loading="lazy">
                    </div>
                  {%- endif -%}
                </div>
              </div>

              <div class="review-content">
                {%- if block.settings.logo_image != blank -%}
                  <div class="review-logo-wrap">
                    <img src="{{ block.settings.logo_image | image_url: width: 400 }}" loading="lazy">
                  </div>
                {%- endif -%}

                <div class="stars-row">
                  {%- assign rating_val = block.settings.rating | floor -%}
                  {%- for i in (1..5) -%}
                    <svg viewBox="0 0 24 24" fill="{% if i <= rating_val %}currentColor{% else %}rgba(var(--color-foreground), 0.1){% endif %}">
                      <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2l-2.81 6.63L2 9.24l5.46 4.73L5.82 21z"/>
                    </svg>
                  {%- endfor -%}
                </div>

                <div class="desc-text rte">
                  {{ block.settings.description }}
                </div>

                <div class="author-info">
                  - {{ block.settings.author_name }}
                </div>

                {%- if block.settings.sponsored_text != blank -%}
                  <div class="sponsored-partnership">
                    <span class="sponsored-link">{{ block.settings.sponsored_text }}</span>
                    {%- if block.settings.sponsored_hover_content != blank -%}
                      <div class="sponsored-popover rte">
                        {{ block.settings.sponsored_hover_content }}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>

            </div>
          </div>
        {%- endfor -%}
      </div>
      
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

<script>
  (function() {
    function initSwiper() {
      if (typeof Swiper !== 'undefined') {
        new Swiper('.swiper-{{ section.id }}', {
          slidesPerView: 1,
          spaceBetween: 40,
          loop: true,
          centeredSlides: true,
          grabCursor: true,
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          effect: 'slide',
          speed: 800,
          breakpoints: {
            990: {
              spaceBetween: 60
            }
          }
        });
      } else {
        setTimeout(initSwiper, 50);
      }
    }
    initSwiper();
  })();
</script>

{% schema %}
{
  "name": "Matsato Review Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "What Professional Chefs Say"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "person_image",
          "label": "Person Image (Desktop)"
        },
        {
          "type": "image_picker",
          "id": "person_image_mobile",
          "label": "Person Image (Mobile)"
        },
        {
          "type": "image_picker",
          "id": "knife_image_1",
          "label": "Knife Image 1"
        },
        {
          "type": "image_picker",
          "id": "knife_image_2",
          "label": "Knife Image 2"
        },
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>I found it aesthetically pleasing and extremely durable. The blade has a good curve, allowing you to rest your middle finger on it comfortably. Chopping all manner of vegetables and meat was easy. If you're looking for a reasonably priced chef's knife get Matsato Japan.</p>"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name / Title",
          "default": "Bernard Descoteaux, Head Chef"
        },
        {
          "type": "text",
          "id": "sponsored_text",
          "label": "Sponsored Text",
          "default": "* Sponsored partnership:"
        },
        {
          "type": "richtext",
          "id": "sponsored_hover_content",
          "label": "Sponsored Hover Content",
          "default": "<p>Matsato partners with professional chefs to test and review our products. This review reflects the genuine professional opinion of the chef after testing our equipment in a professional kitchen environment.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Matsato Review Slider",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
